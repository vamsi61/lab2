def lcm(a,b,c):
    gcd2 = gcd(b,c)
    gcd3 = gcd(a,gcd2)
    lcm2 = b*c // gcd2
    lcm3 = a*lcm2//gcd(a,lcm2)
    return (lcm3, gcd3)
h=input("press:1 for two numbers lcm or \n press:2 for three numbers lcm\n :")
if h == "2":
           a = int(input("number 1:"))
           b = int(input("number 2:"))
           c = int(input("number 3:"))
           (res1,res2) = lcm(a,b,c)
           print("the lcm of" + str(a) + "and" + str(b) + "and" + str(c)+)
